<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.mak</groupId>
        <artifactId>spring-boot-asynchronous-api</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <name>spring-boot-asynchronous-api-loading</name>
    <artifactId>spring-boot-asynchronous-api-loading</artifactId>


    <properties>
        <!-- JDK version used for the project. -->
        <maven.compiler.source>19</maven.compiler.source>
        <maven.compiler.target>19</maven.compiler.target>
        <encoding>UTF-8</encoding>
        <!-- Scala version used for the project. Must match the version used by Gatling. -->
        <scala.version>2.12.3</scala.version>
        <scala.compat.version>2.12</scala.compat.version>
        <!-- Gatling version and Gatling Maven plug-in version. -->
        <gatling.version>3.10.5</gatling.version>
        <gatling-plugin.version>3.0.5</gatling-plugin.version>
        <!--
            The first property specifies the package in which the Gatling simulations are found.
            The second property specifies the Gatling simulation that is to be run.
            Both these properties can be overridden when running a simulation with Maven.
            This example will run the simulation with name HttpSimulation3 in the default simulations package:
            mvn -Dgatling.simulation.name=HttpSimulation3 gatling:test
        -->
        <gatling.simulations.package>com.mak.springbootasynchronousapi.gatling.simulations</gatling.simulations.package>
        <gatling.simulation.name>HttpSimulation4</gatling.simulation.name>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.scala-lang</groupId>
            <artifactId>scala-library</artifactId>
            <version>${scala.version}</version>
        </dependency>

        <!--
            Test dependencies.
            For Gatling load simulations, we only need this single dependency.
        -->
        <dependency>
            <groupId>io.gatling.highcharts</groupId>
            <artifactId>gatling-charts-highcharts</artifactId>
            <version>${gatling.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/main/scala</sourceDirectory>
        <testSourceDirectory>src/test/scala/</testSourceDirectory>
        <plugins>
            <!-- Gatling Maven plugin that runs a load simulation. -->
            <plugin>
                <groupId>io.gatling</groupId>
                <artifactId>gatling-maven-plugin</artifactId>
                <version>${gatling-plugin.version}</version>
                <configuration>
<!--                    <simulationClass>${gatling.simulations.package}.${gatling.simulation.name}</simulationClass>-->
                    <runMultipleSimulations>true</runMultipleSimulations>
                    <includes>
                        <include>${gatling.simulations.package}.*</include>
                    </includes>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
